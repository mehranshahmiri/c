// to find area and peri of regular hexagon 
#include <stdio.h>
#include <math.h>
int main() {
    float side = 6;
    float area, perimeter;
    perimeter = 6 * side;
    area = (3 * sqrt(3) / 2) * (side * side);
    printf("Perimeter of hexagon = %f\n", perimeter);
    printf("Area of hexagon = %f\n", area);
    
}
